{{/* about.tmpl */}}
{{- define "content" }}
{{- $colClass := "col-6"}}
<div class="container">
    <div class="row g-2">
        <div class="{{$colClass}}">
            <h4 class="lead">{{index . "published"}}, {{brief (index . "platform") (index . "section")}}</h4>
            {{ template "aboutTable" . }}
        </div>
        <div class="{{$colClass}}">
            <div class="p-3">
                <img src="{{index . "image"}}" class="rounded mx-auto d-block img-fluid" alt="...">
            </div>
        </div>
    </div>
</div>
{{- end}}