{{/* about.tmpl */}}
{{- define "content" }}
{{- $colClass := "col-10"}}
<div class="container">
    <div class="row g-2">
        <div class="{{$colClass}}">
            <h4 class="lead">{{index . "published"}}, {{brief (index . "platform") (index . "section")}}</h4>
            {{ template "aboutTable" . }}
        </div>
        <div class="{{$colClass}}">
            <div class="p-3">
              {{ screenshot (index . "uuid") (index . "description") }}
            </div>
        </div>
    </div>
</div>
{{- end}}