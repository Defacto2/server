{{- define "artifactfile" }}
{{- if eq false (index . "editor")}}
{{- /* render nothing in the layout   */}}
{{- else}}
{{- $id := index . "modID"}}
{{- $unid := index . "unid"}}
{{- $filename := index . "filename"}}
{{- $dbMod := index . "modDBModify"}}
{{- $statMod := index . "modStatModify"}}
{{- $statSizeB := index . "modStatSizeB"}}
{{- $statSizeFmt := index . "modStatSizeF"}}
{{- $magicMIME := index . "modMagicMime"}}
{{- $magicNumber := index . "modMagicNumber"}}
{{- $absDownload := index . "modAbsDownload"}}
{{- $previewImg := recordImgSample $unid}}
{{- $thumbImg := recordThumbSample $unid}}
{{- $replace := "refresh the page to see the changes"}}

{{- $key := index . "modID"}}
{{- $record := index . "modOnline"}}
{{- $tag := index . "modTag"}}
{{- $os := index . "modOS"}}
{{- $modArchiveContent := index . "modArchiveContent"}}
{{- $modArchiveContentDst := index . "modArchiveContentDst"}}


{{- /*  File assets and metadata editors  */}}
<div class="modal fade" id="asset-editor-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" 
  aria-labelledby="asset-editor-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      {{/*  Modify the assets for ID  */}}
      <div class="modal-header">
        <svg class="bi" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
          <use xlink:href="/svg/bootstrap-icons.svg#file-binary"/>
        </svg>
        <h1 class="modal-title fs-4 ps-2" id="asset-editor-modal-label">Modify the assets for ID {{$key}}</h1><br>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row row-cols-4 g-1 mb-3">
          {{- /*  Public or hidden record */}}
          <div class="col-12 col-xl-2 col-lg-6 d-grid">
            {{radioPublic ($record)}}
            <label class="btn btn-outline-danger" for="artifact-editor-public">Recreate assets</label>
          </div>
          <div class="col-12 col-xl-2 col-lg-6 d-grid">
            {{/*  
             id="asset-editor-delete-text"
             id="asset-editor-delete-images"
                       <input type="hidden" id="asset-editor-hidden">
          <div id="asset-editor-feedback" class="text-end"></div>
            */}}
            {{radioHidden ($record)}}
            <label class="btn btn-outline-danger" for="artifact-editor-hidden">Delete assets</label>
          </div>
          <div class="col-12 col-xl-2 col-lg-6 offset-xl-1">
            <div class="input-group">
              <button type="button" class="btn btn-secondary" id="artifact-editor-key-label"
                data-bs-toggle="tooltip" data-bs-title="Copy the key">Record key</button>
              <input type="text" value='{{$key}}' class="form-control" name="artifact-editor-key" id="artifact-editor-key-value"
                aria-describedby="artifact-editor-key-label" readonly>
            </div>
          </div>
          <div class="col-12 col-xl-5 col-lg-6">
            <div class="input-group">
              <button type="button" class="btn btn-secondary" id="artifact-editor-unique-id-label"
                data-bs-toggle="tooltip" data-bs-title="Copy the ID">Unique ID</button>
              <input type="text" value='{{$unid}}' class="form-control" 
                aria-describedby="artifact-editor-unique-id-label" id="artifact-editor-unique-id-value" readonly>
            </div>
          </div>
        </div>

        <div class="row mt-3 align-items-top">
          <div class="col-xl-6">
            <legend>Artifact for download</legend>
            <div class="input-group mb-1">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Location</label>
              <input type="text" class="form-control" id="artifact-editor-operating-system" value="{{$absDownload}}" readonly>
            </div>
            <div class="input-group mb-1">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Filename</label>
              <input type="text" class="form-control w-25" id="artifact-editor-operating-system" value="{{$filename}}" readonly>
            </div>
            <div class="input-group mb-1">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Filesize</label>
              <input type="text" class="form-control" id="artifact-editor-operating-system" value="{{$statSizeB}}" readonly>
              <input type="text" class="form-control" id="artifact-editor-operating-systemx" value="{{$statSizeFmt}}" readonly>
            </div>
            <div class="input-group mb-1">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Last modifed</label>
              <input type="text" class="form-control" value="{{$statMod}}" data-bs-toggle="tooltip" data-bs-title="On file system" readonly>
              <input type="text" class="form-control" value="{{$dbMod}}" data-bs-toggle="tooltip" data-bs-title="Stored in the database" readonly>
            </div>
            <div class="input-group mb-1">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Magic bytes</label>
              <input type="text" class="form-control" value="{{$magicNumber}}" data-bs-toggle="tooltip" data-bs-title="Guessed type of file" readonly>
              <input type="text" class="form-control" value="{{$magicMIME}}"  data-bs-toggle="tooltip" data-bs-title="Guessed MIME type" readonly>
            </div>
            <div class="input-group mb-1">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Classification</label>
              <input type="text" class="form-control" id="artifact-editor-operating-system" value="{{classificationStr $tag $os}}" readonly>
            </div>
            <label for="basic-url" class="form-label mt-3 text-warning-emphasis">Replacement</label>
            <div class="input-group input-group-sm mb-1">
              <input type="file" class="form-control w-50" id="artifact-editor-operating-system" value="">
              <button class="btn btn-outline-secondary" id="asset-editor-download-submit">Upload</button> 
              <button class="btn btn-outline-secondary" id="asset-editor-download-reset">Clear</button>
            </div>
            <div class="form-text" id="basic-addon4"><span class="text-warning-emphasis">Normally not required</span>, upload and replace the artifact download.</div>
            <legend class="mt-3">Download content</legend>
            {{- if eq "" (index . "modZipContent")}}
            <div class="input-group mb-3">
              <div class="alert alert-primary w-100" role="alert">
                The artifact is not an archive.
              </div>
            </div>
            {{- else}}
            <div class="input-group mb-3">
              <label class="input-group-text w-25" for="artifact-editor-operating-system" id="artifact-editor-os-label">Location</label>
              <input type="text" class="form-control" id="artifact-editor-operating-system" value="{{$modArchiveContentDst}}" readonly>
            </div>
            <div class="container text-begin mb-3">
              <hr class="m-0 mb-3 mt-3">
              {{$modArchiveContent}}
            </div>
            {{- end}}
          </div>
          <div class="col-xl-6 pb-3 bg-light">
            <legend>Image assets</legend>
            <div class="row row-cols-2 g-1">
              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <p class="card-text">
                      <span class="lead">Preview assets</span><br>
                      <div class="form-text">These are displayed when viewing the artifact page</div>
                      <table class="table table-hover">
                        <tbody>
                          {{- range $name, $info := .modAssetPreview}}
                          <tr>
                            <th scope="row">{{$name}}</th>
                            <td>{{index $info 0}}B</td>
                            {{- $ext := printf ".%s" $name}}
                            <td><a href="{{recordPreviewSrc $unid $ext}}">{{index $info 1}}</a></td>
                          </tr>{{- end}}
                      </table>
                      <div><a href="">Square crop</a></div>
                      <div><a href="">640x480 crop</a></div>
                      <div><a href="">640x1280 crop</a></div>
                      <div><a href="">Delete previews</a></div>
                    </p>
                  </div>
                  {{$previewImg}}
                </div>
              </div>
              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <p class="card-text">
                      <span class="lead">Thumbnail assets</span><br>
                      <div class="form-text">These are displayed when listing multiple artifacts on a page</div>
                      <table class="table table-hover">
                        <tbody>
                          {{- range $name, $info := .modAssetThumbnail}}
                          <tr>
                            <th scope="row">{{$name}}</th>
                            <td>{{index $info 0}}B</td>
                            {{- $ext := printf ".%s" $name}}
                            <td><a href="{{recordThumbnailSrc $unid $ext}}">{{index $info 1}}</a></td>
                          </tr>{{- end}}
                      </table>
                      <div><a href="">Square crop, align top</a></div>
                      <div><a href="">Square crop, align center</a></div>
                      <div><a href="">Square crop, align bottom</a></div>
                      <div><a href="">Delete thumbnails</a></div>
                    </p>
                  </div>
                  {{$thumbImg}}
                </div>
              </div>
            </div>
            <label for="basic-url" class="form-label mt-3">Replacement image</label>
            <div class="input-group input-group-sm mb-1">  
              <input type="file" class="form-control w-50" id="artifact-editor-operating-system" 
                accept="image/png, image/jpeg, image/webp, image/bmp, image/gif, image/tiff" value="">
              <button class="btn btn-outline-secondary" id="asset-editor-download-submit">Upload</button> 
              <button class="btn btn-outline-secondary" id="asset-editor-download-reset">Clear</button>
            </div>
            {{/*  
            id="edUploadPreviewReset"
            id="edUploadPreviewBtn"
            id="asset-editor-preview"
            */}}
            <div class="form-text" id="basic-addon4">Select an image, text or ansi file to use as the image asset samples.</div>

            <legend class="mt-3">Extras assets</legend>
            <div class="row row-cols-2 g-1">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <p class="card-text">
                      <span class="lead">Files</span><br>
                      <table class="table table-hover">
                        <tbody>
                          {{- range $name, $info := .modAssetExtra}}
                          <tr>
                            <th scope="row">{{$name}}</th>
                            <td>{{index $info 0}}B</td>
                            {{- $ext := printf ".%s" $name}}
                            {{- if eq $name "README"}}{{- $ext := printf ".txt"}}
                            {{- else if eq $name "Repack ZIP"}}{{- $ext := ".zip"}}{{end}}
                            <td>{{index $info 1}}</td>
                          </tr>{{- end}}
                      </table>
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <p class="card-text">
                      <span class="lead">README</span>
                      <div class="form-check form-switch">
                        {{recordReadme (index . "modNoReadme") }}
                        <label class="form-check-label" id="edHideMeLabel" for="edHideMe">Hide readme from view</label>
                        <div class="form-text">disable the use of the <q>textfile&nbsp;content</q></div>
                        <div class="valid-feedback">Saved, {{$replace}}</div>
                        <div class="invalid-feedback" id="edHideMeErr">error placeholder</div>  
                      </div>
                    </p>
                  </div>
                </div>
              </div> 
              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <p class="card-text">
                      <span class="lead">Repacked ZIP</span>
                      <div class="form-check form-switch">
                        {{recordReadme (index . "modNoReadme") }}
                        <label class="form-check-label" id="edHideMeLabel" for="edHideMe">Offer a repacked archive</label>
                        <div class="form-text">feature not used, download is not an obsolete archive</div>
                        <div class="valid-feedback">Saved, {{$replace}}</div>
                        <div class="invalid-feedback" id="edHideMeErr">error placeholder</div>  
                      </div>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>     
          {{/*  
        {{ template "artifactzip" . }}
          */}}
      </div>
      {{/*  Switch to assets and reset buttons  */}}
      {{- template "artifactfooter" . }}
    </div>
  </div>
</div>
{{- end}}
{{- end}}